{
  "name": "openllm-for-excel",
  "version": "1.0.0",
  "description": "Open source LLM-powered AI assistant for Microsoft Excel. Chat with AI to get Excel advice, generate formulas, and execute Excel JavaScript API code.",
  "repository": {
    "type": "git",
    "url": "https://github.com/Olemi-llm-apprentice/OpenLLM-for-Excel.git"
  },
  "author": "Olemi-llm-apprentice",
  "license": "MIT",
  "config": {
    "app_to_debug": "excel",
    "app_type_to_debug": "desktop",
    "dev_server_port": 3002
  },
  "scripts": {
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "dev-server": "webpack serve --mode development",
    "lint": "office-addin-lint check",
    "lint:fix": "office-addin-lint fix",
    "prettier": "office-addin-lint prettier",
    "start": "office-addin-debugging start manifest.xml",
    "start:desktop": "office-addin-debugging start manifest.xml desktop",
    "start:web": "office-addin-debugging start manifest.xml web",
    "stop": "office-addin-debugging stop manifest.xml",
    "validate": "office-addin-manifest validate manifest.xml",
    "watch": "webpack --mode development --watch",
    "sideload": "office-toolbox sideload -m ./manifest.xml -a Excel",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:models": "node tests/model-availability.test.js"
  },
  "dependencies": {
    "core-js": "^3.47.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@types/jest": "^30.0.0",
    "@types/office-js": "^1.0.560",
    "@types/office-runtime": "^1.0.35",
    "acorn": "^8.15.0",
    "babel-jest": "^30.2.0",
    "babel-loader": "^10.0.0",
    "copy-webpack-plugin": "^13.0.1",
    "dotenv": "^16.4.5",
    "eslint": "^9.39.1",
    "eslint-plugin-office-addins": "^4.0.6",
    "html-loader": "^5.1.0",
    "html-webpack-plugin": "^5.6.5",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "office-addin-cli": "^2.0.6",
    "office-addin-debugging": "^6.0.6",
    "office-addin-dev-certs": "^2.0.6",
    "office-addin-lint": "^3.0.6",
    "office-addin-manifest": "^2.1.2",
    "office-addin-prettier-config": "^2.0.1",
    "regenerator-runtime": "^0.14.1",
    "source-map-loader": "^5.0.0",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "prettier": "office-addin-prettier-config",
  "browserslist": [
    "defaults",
    "not dead"
  ],
  "keywords": [
    "excel",
    "office-addin",
    "llm",
    "ai",
    "chatgpt",
    "claude",
    "openai",
    "assistant",
    "spreadsheet",
    "automation"
  ]
}
